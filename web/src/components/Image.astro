---
import { urlFor } from '../utils/image'

export interface Props {
  asset: object
  alt: string
  width?: number
  height?: number
  style?: string
  classes?: string
}

// *todo* defaulting width, per discussion in utils/portableText/Readme
const { asset, alt, width = 640, height = 480, style = '', classes = '' } = Astro.props
const image = urlFor(asset).width(width).height(height).url()
---

<img
  src={image}
  class={classes}
  style={style}
  alt={alt}
/>
