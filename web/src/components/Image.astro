---
import { urlFor } from '../utils/image'

export interface Props {
  image: any
  width?: number
  height?: number
  classes?: string
  alt: string
}

// *todo* defaulting width, per discussion in utils/portableText/Readme
const {
  image,
  alt,
  width,
  height,
  classes = '',
} = Astro.props

const url = urlFor(image)
  // .width(width)
  // .height(height)
  .url()
---

<img
  width={width}
  height={height}
  src={url}
  class={classes}
  alt={alt}
/>
